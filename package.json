{
  "name": "api-journey-builder",
  "displayName": "API Journey Builder",
  "description": "AI-powered tool to visualize API execution flows and function dependencies",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:apiJourneyBuilder.generate"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "apiJourneyBuilder.generate",
        "title": "üöÄ Generate AI-Powered Journey"
      },
      {
        "command": "apiJourneyBuilder.navigate",
        "title": "üìç Navigate to Function"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorLangId",
          "command": "apiJourneyBuilder.generate",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "apiJourneyBuilder.generate",
          "when": "editorLangId"
        }
      ]
    },
    "configuration": {
      "title": "API Journey Builder",
      "properties": {
        "apiJourneyBuilder.openaiModel": {
          "type": "string",
          "default": "gpt-4-turbo-preview",
          "description": "OpenAI model to use for analysis",
          "enum": [
            "gpt-4-turbo-preview",
            "gpt-4",
            "gpt-3.5-turbo"
          ]
        },
        "apiJourneyBuilder.maxContextFiles": {
          "type": "number",
          "default": 10,
          "description": "Maximum number of related files to include in analysis context",
          "minimum": 1,
          "maximum": 50
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "echo \"No tests specified\""
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "openai": "^5.10.1"
  }
}
